<% include ../partials/header %>

<div class="container">
	<div class="row">
	<h1 style="text-align: center;">Add New Comment to <%= application.name %></h1>
	<div style="width: 40%; margin: 30px auto;">
		<form action="/applications/<%= application._id %>/comments" method="POST">

		    <div class="form-group"><input class="form-control" type="comment[text]" name="name" placeholder="text"></div>
		    <div class="form-group"><input class="form-control" type="comment[author]" name="image" placeholder="author"></div>
		   
		    <button class="btn btn-lg btn-primary btn-block">Submit</button>
		</form>
			<a href="/applications">Go Back</a>
	</div>
	</div>		
</div>

<% include ../partials/footer %>