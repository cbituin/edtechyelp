<% include partials/header %>

<div class="container">
	<div class="row">
	<h1 style="text-align: center;">Add an EdTech Application</h1>
	<h2 style="text-align: center;">Don't see your favorite EdTech Application? Add it here!</h2>
	<div style="width: 40%; margin: 30px auto;">
		<form action="/applications" method="POST">

		    <div class="form-group"><input class="form-control" type="text" name="name" placeholder="name"></div>
		    <div class="form-group"><input class="form-control" type="text" name="image" placeholder="image url"></div>
		    <div class="form-group"><input class="form-control" type="text" name="summary" placeholder="description of app"></div>
		    <div class="form-group"><input class="form-control" type="test" name="url" placeholder="enter the url of the app"></div>

		    <button class="btn btn-lg btn-primary btn-block">Submit</button>
		</form>
			<a href="/applications">Go Back</a>
	</div>
	</div>		
</div>

<% include partials/footer %>